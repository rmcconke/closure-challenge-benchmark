FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    p
    {
        solver          GAMG;
        tolerance       1e-8;
        relTol          0.1;
        smoother        GaussSeidel;
    }

    "(U|k)"
    {
        solver          PBiCGStab;
        preconditioner  DILU;
        tolerance       1e-8;
        relTol          0.1;
    }
    
    omega
    {
        $U;
        tolerance       1e-15; 
    }


}

SIMPLE
{
    nNonOrthogonalCorrectors 1;

    residualControl
    {
        "(U|p|k)"       5e-7;
        omega           1e-10;
    }
    consistent          yes;
}

relaxationFactors
{

    equations
    {
        U               0.9;
        k               0.7;
        omega           0.7;
    }
}


